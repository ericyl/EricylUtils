<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_menu_header"
    android:background="?colorPrimary"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_small_margin"
    android:paddingRight="@dimen/activity_small_margin"
    android:paddingTop="@dimen/drawer_menu_header_top">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="@dimen/view_xlarge_margin"
        android:src="@drawable/bili_default_avatar"
        app:civ_border_color="@color/window_background"
        app:civ_border_width="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_xlarge_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="72dp"
        android:text="@string/please_sign_in"
        android:textColor="@color/white" />

</LinearLayout>