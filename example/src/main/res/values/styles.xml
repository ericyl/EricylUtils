<resources>

    <style name="AppTheme.Translucent" parent="AppTheme" />

    <style name="AppTheme.Search" parent="AppTheme" />

    <style name="AppTheme" parent="Base.Theme.AppTheme" />

    <style name="Base.Theme.AppTheme" parent="Base.Theme.AppTheme.DayNight">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.AppTheme.DayNight" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.AppTheme.Toolbar</item>
        <item name="buttonStyle">@style/Widget.AppTheme.Button</item>
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="colorButtonActive">?attr/colorPrimaryDark</item>
        <item name="colorButtonInactive">@color/gray</item>
    </style>

    <!--Button-->

    <style name="Widget.AppTheme.Button.Other" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Widget.Button</item>
    </style>

    <style name="Widget.AppTheme.Button.Base.Other" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_default</item>
    </style>

    <style name="Widget.AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Widget.Button</item>
    </style>

    <style name="TextAppearance.AppTheme.Widget.Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/btn_default_text_color</item>
    </style>

    <!--TabLayout-->
    <style name="Widget.AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/TextAppearance.Widget.AppTheme.TabLayout</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="TextAppearance.Widget.AppTheme.TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!--Toolbar-->
    <style name="Widget.AppTheme.Toolbar" parent="Widget.AppTheme.Toolbar.Base" />

    <style name="Widget.AppTheme.Toolbar.Base" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.AppTheme.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.AppTheme.Toolbar.Subtitle</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="popupTheme">@style/Widget.AppTheme.PopMenu</item>
        <item name="android:theme">@style/ThemeOverlay.AppTheme.Dark.ActionBar</item>


    </style>

    <style name="ThemeOverlay.AppTheme.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextAppearance.AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.AppTheme.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.AppTheme.PopMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:listSelector">@drawable/item_background</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/item_background</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/light_gray</item>
    </style>

    <!--AppBarLayout-->
    <style name="Widget.AppTheme.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:theme">@style/Widget.AppTheme.ActionBar</item>
    </style>

    <style name="Widget.AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/white</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
